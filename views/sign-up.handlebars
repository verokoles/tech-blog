<div class="column">
<h2 class="title pb-4">Make a new account:</h2><hr>
<form class="signup-form">
  <div>
    <label for="username-signup">Username:</label>
    <input type="text"
     id="username-signup" />
  </div>
  {{!-- email --}}
  <div>
    <label for="email-signup">E-mail:</label>
    <input type="text" 
    id="email-signup" />
  </div>
  {{!-- github --}}
    <div>
    <label for="github-signup">Github:</label>
    <input type="text"
     id="github-signup" />
  </div>
  {{!-- password create --}}
  <div>
    <label for="password-signup">Password:</label>
    <input type="password"
     id="password-signup" />
  </div>

  <div>
    <button type="submit" 
    class="button is-primary">Signup!</button>
  </div>
</form>
</div>

